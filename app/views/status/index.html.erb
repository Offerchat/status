<div class="container">
<div class="block clearfix">
<div class="grid-12 t-center">
<h1>Status</h1>

</div>
</div>
</div>
<div class="blockz inner body-container">
	<div class="section">

		<div class="block clearfix">
			<div class="container">
				<div class="grid-6">
					<div class="statusbox"> 
						<center>
							<% if @site %>
								<div class="ico-web"><%= image_tag("sprite-live.png") %></div>
								<%= image_tag("website_live.png") %>
					          	<h2><small><strong>Site <br> ALIVE AND KICKIN!</strong></small></h2> 
					        <% else    %>
					        	<div class="ico-web"><%= image_tag("sprite-down.png") %></div>
					          	<%= image_tag("website_live.png") %>
					          	<h2><small><strong>Site <br> DEAD. </strong></small></h2>
					        <%  end   %>	
						</center>
					</div>
				</div>
				<div class="grid-6">
					<div class="statusbox">
						<center>
							<% if @server %>
								<div class="ico-serve"><%= image_tag("sprite-live.png") %></div>
								<%= image_tag("website_live.png") %>
					          	<h2><small><strong>Chat Server <br> ALIVE AND KICKIN!</strong></small></h2> 
					        <% else    %>
					        	<div class="ico-serve"><%= image_tag("sprite-down.png") %></div>
					          	<%= image_tag("website_live.png") %>
					          	<h2><small><strong>Chat Server <br> DEAD. </strong></small></h2>
					        <%  end   %>
						</center>
					</div>
				</div>
				<br><br>
			</div>
		</div>
		<div class="container">
			<div class="grid-8">
				<% @feeds.each do |entry| %>
					<div class="post-940 post type-post status-publish format-standard hentry category-articles tag-customer-service-outsourcing">
						<div class="box">
							<div class="clear"></div>
								<div class="frame">
									<div class="title-wrap"> 
										<h2 class="entry-title"><%= link_to entry.title, entry.url %></h2>
										<div class="title-meta">
											<span> by <%= entry.author %> on <%= link_to entry.published.strftime("%B %-d, %Y"), entry.url %></span>
										</div>
									</div>	
									<div class="post-content">	
										<p><%= entry.summary %> <%= link_to "Read More >>",entry.url %></p>

									</div>
									<div class="bar">
										<div class="bar-frame clearfix">
											<div class="meta-info">
												<div class="share">
													<span class="bar-comment"><%= link_to "View Comments",entry.url+"/#disqus_thread" %></span>
												</div>
											</div>
										</div>
									</div>
								</div>
						</div>
					</div>
				<% end 					%>	
			</div>
			<div class="grid-4 omega clearfix">
				<div class="media-buttons">
					<p>media button, media button, media button, media button, media button, media button,</p>
				</div>
				<div class="greybox latest tweet">
					<h2 class="twitter-text"> twitter </h2>
					<% @tweets.each do|tweet| tweet.summary.slice! "offerchat: "%>
						<div class="tweet-box clearfix">
						</div>
					<% end %>
					<div class="clearfix">
					<%= link_to "Join the conversation", "http://twitter.com/offerchat", :class=>"pull-right" %>
				</div>
				</div>
			</div>	
		</div>
	</div>
</div>


