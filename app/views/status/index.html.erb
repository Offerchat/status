<h1 style= "font-size:40px">STATUS</h1>

	<div class = "withborder websites">
		<div class ="withborder website">
			<% if @site %>
				SITE IS ALIVE AND KICKIN!
			<% else		%>
				DEAD-- STATUS: <%= @x %>
			<%  end 	%>
		</div>
		<div class ="withborder website">
			<% if @server %>
				SERVER IS ALIVE AND KICKIN!
			<% else		%>
				DEAD-- STATUS: <%= @y %>
			<%  end 	%>
		</div>
	</div>

<div id="content">
<div class="post-wrap">
	<div class="post-940 post type-post status-publish format-standard hentry category-articles tag-customer-service-outsourcing">
	<div class="box">
		<div class="clear"></div>
	<% @feeds.each do |feed| %>
		<div class="frame">
			<div class="title-wrap">
				<h2 class="entry-title"><%= link_to feed.name, feed.guid %></h2>
				
				<div class="title-meta">
					<span><%= feed.author %></span> 
					<span><%= link_to feed.published_at.strftime("%B %-d, %Y"), feed.url %></span> 
					<span><%= link_to "View Comments",feed.url+"/#disqus_thread" %></span>
				</div>
			</div>
			
			<div class="post-content">
				<p><%= feed.summary %></p>
					<span><%= link_to "Read More >>",feed.url %></span>
			</div>
		</div>
	</div>
 	<% end 					%>
 	</div>
 </div>
 </div>
