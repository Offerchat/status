<%= render 'users/navbar' %>

<div class = "content">
	<div id="box-container-profile" style="width:1200px">
		<div style = "height:100px"></div>
		<h2>Search your Doctor</h2>

		<%= form_tag doctors_selectSearch_path, :method => 'get' do %>
		  <p>
		  	<%= label_tag(:kind, "Search by:") %>
		    <%= select_tag(:kind ,options_for_select([["Name", "Name"], ["Specialization", "Specialization"],["Clinic","Clinic"]]),:class => 'input_field_slot') %>
		    <%= submit_tag "Go", :class => "submit_btn" %>
		  </p>
		<% end %>

		<%= form_tag doctors_searchDoctor_path, :method => 'get',:id => "doctors_searchDoctor" do %>
		  <p>
		    <%= text_field_tag :search, params[:search], :placeholder => "Enter text here...",:class => 'input_field_short' %>
		  </p>
		<% end %>

		<div id="doctors"><%= render 'users/users' %></div>
	</div>
</div>
